<%= form_for [@user, @reservation] do |f| %>
  <div class="row">
    <div class="col-sm-5">
      <h4> Select Date </h4>
      <%= f.label :job_type %>
      <%= f.collection_select :job_type, job_types, :first, :last %></br>
      <%= f.label :schedule_date, "Schedule Date - Time" %>
      </br>
      <%= f.datetime_select :schedule_date, discard_year: true, ampm: true, minute_step: 15 %>
      </br>
      <strong> How Long do you estimate this job will take?</strong>
      <%= select_hour 01 %>
      <strong>hours</strong>
      </br>
    </div>
    <div class="col-sm-7">
      <h4>Address</h4>
      <%= f.fields_for :address do |a| %>
        <div class="row">
          <div class="col-sm-6">
            <%= a.label :street %></br>
            <%= a.text_field :street, required: true %>
            </br>
            <%= a.label :city %></br>
            <%= a.text_field :city, required: true %>
            </br>
            <%= a.label :zip %></br>
            <%= a.text_field :zip, required: true %>
            </br>
            <%= a.label :state %></br>
            <%= a.text_field :state, readonly: true  %>
          </div>
          <div class="col-sm-6">
            <%= f.label :phone_number %>
            <%= f.text_field :phone_number, required: true  %>

            <%= f.label :supervisor_name %>
            <%= f.text_field :supervisor_name, required: true  %>

            <%= f.label :instructions, "Special Instructions" %></br>
            <%= f.text_area :instructions, size: "30x3" %></br>
          </div>
        </div>
      <% end %>
    </div>
  </div>

    <%= f.submit %>
<% end %>
