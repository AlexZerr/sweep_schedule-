<div class="row">
  <div class="col-lg-12">
    <div class="side-head">
      Schedule A Truck
    </div>

    <% if current_user.present? %>

      <div class="row">
        <div class="col-lg-12">
          <div class="side-main">
            <h5> <%= current_user.company_name %> </h5>
            <div>
              <%= render "reservations/form" %>
            </div>
            <div>
              <%= render "reservations/reservation_search" %>
            </div>
            <div class="reservations">
              <%= render "reservations/reservations" %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <%= render "devise/sessions/form" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="side-foot">
      <%= link_to "Sign Out", destroy_user_session_path, data: {method: :delete} %>
    </div>
  </div>
</div>
