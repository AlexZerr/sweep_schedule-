<div class="row">
  <div class="col-lg-12">
    <div class="side-head">
            <h5> <%= current_user.company_name %> </h5>
    </div>

    <% if current_user.present? %>

      <div class="row">
        <div class="col-lg-12">
          <div class="side-main">

            <h4><u>Today's Schedule</u></h4>
            <div class="day-schedule">
              <h6>Fully Booked Times</h6>
              <%= render "reservations/day_schedule" %>
            </div>
          </div>
        </div>
      </div>
    <% else %>
      <%= render "devise/sessions/form" %>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-lg-12">
    <div class="side-foot">
      <%= link_to "Sign Out", destroy_user_session_path, data: {method: :delete} %>
    </div>
  </div>
</div>
