<!DOCTYPE html>
<html>
<head>
  <title>SweepSchedule</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= stylesheet_link_tag 'application' %>
  <%= csrf_meta_tags %>
</head>
  <body>
   <% flash.each do |name, message| %>
      <div id="flash_<%= name %>">
        <%= message %>
      </div>
    <% end if !flash.blank? %>

    <div class="row">

      <div class="col-lg-10">
        <div id="main-content">
          <%= yield %>
        </div>
      </div>

      <% if !@hide_sidebar %>
        <div class="col-lg-2">
          <div id="side">
            <%= render partial: "layouts/sidebar" %>
            <%= yield :sidebar %>
          </div>
        </div>
      <% end %>

    </div>

  </body>
</html>
